## Whonix /usr/bin/update-torbrowser

SCRIPTNAME="$(basename $0)"

## Add default option.
opts="--update"

command -v torbrowser >/dev/null

if [ "$?" = "0" ]; then
   torbrowser ${1+"$@"} $opts
else
   echo "ERROR $SCRIPTNAME: torbrowser script not available!"
fi

## End of Whonix /usr/bin/update-torbrowser
