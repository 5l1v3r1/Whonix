#             --key defaultTimezone \
#             --type string \
#            UTC

#sudo -u "$USERNAME" kwriteconfig --file plasma-desktop-appletsrc \
#             --group Containments --group 1 --group Applets --group 7 --group Configuration \
#             --key showSeconds \
#             --type bool \
#            true

#sudo -u "$USERNAME" kwriteconfig --file plasma-desktop-appletsrc \
