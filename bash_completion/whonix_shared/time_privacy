have time_privacy &&
_time_privacy()
{
	local cur prev options

	cur=${COMP_WORDS[COMP_CWORD]}
	prev=${COMP_WORDS[COMP_CWORD-1]}
	options='-h -d -m -y -i -r -f'

	case $prev in
	*)
	  COMPREPLY=( $(
		compgen -W "$options" | grep "^$cur"
	  ) )
	  ;;
	esac

	return 0
}

[ "$have" ] && complete -F _time_privacy -o filenames -o plusdirs time_privacy
