# Internal, isolated network "aos". Soeley used to
# communicate # with aos-Workstation. Has no access
# to the host.
auto eth1
iface eth1 inet static
       # INT_IP
       address 192.168.0.10
       netmask 255.255.255.0
       # Out commented.
       # For what do we need network and broadcast anyway?
       #network 192.168.0.0
       #broadcast 192.168.0.255

# end of aos /etc/network/interfaces