#!/bin/bash

set -x

true "Currently running script: $0"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..
cd help-steps

source variables
source pre

run-chroot-scripts-img() {
   trap "error_handler_general" ERR INT TERM

   sync

   ./mount-img
   ./chroot-img

   sync

   ## Just for testing.
   chroot "$CHROOT_FOLDER" dir
   chroot "$CHROOT_FOLDER" ls -l "/usr/bin/"
   chroot "$CHROOT_FOLDER" mount
   chroot "$CHROOT_FOLDER" update-grub -v
   chroot "$CHROOT_FOLDER" sync
   sync

   ## Check which chroot scripts we got.
   chroot "$CHROOT_FOLDER" run-parts --verbose --test "/usr/share/whonix/chroot-scripts-pre.d"

   ## Run the chroot scripts.
   ## (Which got copied into the image by copyinto.)
   chroot "$CHROOT_FOLDER" run-parts --verbose --exit-on-error "/usr/share/whonix/chroot-scripts-pre.d"

   sync

   ./unchroot-img
   ./unmount-img

   sync
}

run-chroot-scripts-bare-metal() {
   trap "error_handler_general" ERR INT TERM

   sync

   ## Check which "chroot" scripts we got.
   run-parts --verbose --test "/usr/share/whonix/chroot-scripts-pre.d"

   ## Run the "chroot" scripts.
   ## (Which got copied into the image by copyinto.)
   run-parts --verbose --exit-on-error "/usr/share/whonix/chroot-scripts-pre.d"

   sync

}

if [ "$BARE_METAL" = "1" ]; then
   run-chroot-scripts-bare-metal
else
   run-chroot-scripts-img
fi

