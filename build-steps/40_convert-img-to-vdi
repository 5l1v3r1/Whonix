#!/bin/bash

set -x

true "$0"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..
cd help-steps

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source "$MYDIR"/variables
source "$MYDIR"/pre

convert_img-to_vdi() {
   ## error_handler_general

   sudo -u "$USERNAME" mkdir -p "/home/"$USERNAME"/VirtualBox VMs/"
   sudo -u "$USERNAME" mkdir -p "/home/"$USERNAME"/VirtualBox VMs/""$VMNAME"
   sudo -u "$USERNAME" VBoxManage convertfromraw /home/"$USERNAME"/whonix_binary/"$VMNAME"_copy.img "/home/"$USERNAME"/VirtualBox VMs/""$VMNAME"/"$VMNAME".vdi
}

convert_img-to_vdi


