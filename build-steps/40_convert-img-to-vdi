#!/bin/bash

set -x

true "$0"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..
cd help-steps

source variables
source pre

convert_img-to_vdi() {
   trap "error_handler_general" ERR INT TERM

   sudo -u "$USERNAME" mkdir --parents "/home/"$USERNAME"/VirtualBox VMs/"
   sudo -u "$USERNAME" mkdir --parents "/home/"$USERNAME"/VirtualBox VMs/""$VMNAME"
   sudo -u "$USERNAME" VBoxManage convertfromraw /home/"$USERNAME"/whonix_binary/"$VMNAME"_copy.img "/home/"$USERNAME"/VirtualBox VMs/""$VMNAME"/"$VMNAME".vdi
}

convert_img-to_vdi


