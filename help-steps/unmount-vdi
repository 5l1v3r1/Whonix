#!/bin/bash

set -x

error_handler_unmount-vdi() {
   : echo "
${red}${bold}BASH_COMMAND${reset}: $BASH_COMMAND
${red}${bold}ERROR $0: | caller: $(caller)${reset}
"
   exit 1
}

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source "$MYDIR"/pre
source "$MYDIR"/variables

unmount_vdi() {
   trap "error_handler_unmount-vdi" ERR INT TERM

   ## Called after copying into vm.
   ## Should not throw any errors.

   sync

   ## Shutdown the ndb.
   qemu-nbd -d /dev/nbd0
   sync

   ## In the end unmount.
   umount "$CHROOT_FOLDER"
   sync

   ## Delete temporary folder.
   ## It did not contain anything. It was only a mount point.
   rm -r "$CHROOT_FOLDER"
   sync
}

if [ "$BARE_METAL" = "1" ]; then
   true "${green}INFO${reset}: Skipping script, because BARE_METAL=1: $0"
   exit 0
else
   true "${bold}INFO${reset}: Currently running script: $0"
   unmount_vdi
fi

