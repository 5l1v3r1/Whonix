#!/bin/bash

set +x
#set -x

true "Currently running script: $0"

error_handler_general() {
echo "
#!!! ERROR in `caller` !!!#
#!!! ERROR in `caller` !!!#
#!!! ERROR in `caller` !!!#
"

exit 1
}

trap "error_handler_general" ERR INT TERM

if [ "$(id -u)" != "0" ]; then
    echo "ERROR: This must be run as root (sudo)!"
    exit 1
else
    echo "INFO: Script running as root."
fi

ionice -c3 -p$$
ionice
renice +19 -p $$
nice 

set -x

