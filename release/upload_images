#!/bin/bash

## This file is part of Whonix.
## Copyright (C) 2012 - 2014 Patrick Schleizer <adrelanos@riseup.net>
## See the file COPYING for copying conditions.

set -x
set -o pipefail

error_handler() {
   echo "FAILED!"
   exit 1
}

trap "error_handler" ERR

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..

cd help-steps

## disable cmd line parser, since not needed
export WHONIX_BUILD_PARSED="1"
export VMNAME="internalrun"

source variables

#project="testprojectwh"
#project="whonix"
project="whonixdevelopermetafiles"

version="$whonix_build_closest_git_tag"

## Test.
rsync \
   --dry-run \
   --partial \
   --progress \
   --verbose \
   "$WHONIX_BINARY"/*.ova \
   "$WHONIX_BINARY"/*.qcow2 \
   "$WHONIX_BINARY"/*.asc \
   adrelanos,"$project"@frs.sourceforge.net:/home/frs/project/"$project"/whonix-"$version"/

true "Press any key to continue."
read temp

while true; do

   rsync_exit_code="0"
   rsync \
      --partial \
      --progress \
      --verbose \
      "$WHONIX_BINARY"/*.ova \
      "$WHONIX_BINARY"/*.qcow2 \
      "$WHONIX_BINARY"/*.asc \
      adrelanos,"$project"@frs.sourceforge.net:/home/frs/project/"$project"/whonix-"$version"/ \
      || { rsync_exit_code="$?" ; true; };

   if [ "$rsync_exit_code" = "0" ]; then
      break
   fi

   sleep 10

done
