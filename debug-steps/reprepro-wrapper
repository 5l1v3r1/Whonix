## usage:
## ./debug-steps/reprepro-wrapper listmatched local "*"

set -x

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..
cd help-steps

ROOT_CHECK="0"
WHONIX_BUILD_PARSED="1"
VMNAME="internalrun"

source pre
source variables

reprepro_wrapper() {

   reprepro \
      $WHONIX_BUILD_REPREPRO_FOLDER_OPTIONS \
      ${1+"$@"}
}

true "${bold}INFO: Currently running script: $0${reset}"
reprepro_wrapper ${1+"$@"}
