#!/bin/bash

set -x

true "Currently running script: $0"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..
cd help-steps

source variables
source pre

download_sources() {
   trap "error_handler_general" ERR INT TERM

   "$MYDIR"/mount-img
   "$MYDIR"/chroot-img

   chroot "$CHROOT_FOLDER" "/usr/local/share/whonix/whonix_download_sources"
   sync

   "$MYDIR"/unchroot-img
   "$MYDIR"/unmount-img
}

move_sources() {
   trap "error_handler_general" ERR INT TERM

   "$MYDIR"/mount-img
   "$MYDIR"/chroot-img

   mkdir --parents "$HOMEVAR/whonix_binary/sources/"$VMNAME""

   mv "$CHROOT_FOLDER/usr/local/share/whonix/sources/*" "$HOMEVAR/whonix_binary/sources/"$VMNAME"/"

   #rm -r "$CHROOT_FOLDER/usr/local/share/whonix/sources/"

   chown --recursive "$USERNAME":"$USERNAME" "$HOMEVAR/whonix_binary/"

   "$MYDIR"/unchroot-img
   "$MYDIR"/unmount-img
} 

download_sources
move_sources

