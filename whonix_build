#!/bin/bash

## This file is part of Whonix.
## Copyright (C) 2012 - 2014 Patrick Schleizer <adrelanos@riseup.net>
## See the file COPYING for copying conditions.

set -x
set -o pipefail

build_main_error_handler() {
   : echo "
${red}${bold}BASH_COMMAND${reset}: $BASH_COMMAND
${red}${bold}ERROR $BASH_SOURCE: | caller: $(caller)${reset}
"
   exit 1
}

trap "build_main_error_handler" ERR

build_main_defaults() {
   trap "build_main_error_handler" ERR
   true "${cyan}${bold}$BASH_SOURCE $FUNCNAME${reset}: Setting defaults (only for prettier output below)."
   WHONIX_MAIN_SCRIPT_BUILD_GATEWAY="false"
   WHONIX_MAIN_SCRIPT_BUILD_WORKSTATION="false"
   WHONIX_MAIN_SCRIPT_BUILD_CUSTOM_WORKSTATION="false"
}

build_main_parse_cmd() {
   trap "build_main_error_handler" ERR
   true "${cyan}${bold}$BASH_SOURCE $FUNCNAME${reset}: parsing command line arguments..."
   true "${cyan}${bold}$BASH_SOURCE $FUNCNAME${reset}: \${1+\"\$@\"}: ${1+"$@"}"
   ## Thanks to:
   ## http://mywiki.wooledge.org/BashFAQ/035
   while :
   do
       case $1 in
           --all)
               WHONIX_MAIN_SCRIPT_BUILD_GATEWAY="true"
               WHONIX_MAIN_SCRIPT_BUILD_WORKSTATION="true"
               WHONIX_MAIN_SCRIPT_BUILD_CUSTOM_WORKSTATION="true"
               shift
               ;;
           -tg | --tor-gateway | --torgateway)
               WHONIX_MAIN_SCRIPT_BUILD_GATEWAY="true"
               shift
               ;;
           -tw | --tor-workstation | --torworkstation)
               WHONIX_MAIN_SCRIPT_BUILD_WORKSTATION="true"
               shift
               ;;
           -tcw | --tor-custom-workstation | --torcustomworkstation)
               WHONIX_MAIN_SCRIPT_BUILD_CUSTOM_WORKSTATION="true"
               shift
               ;;
           --)
               shift
               break
               ;;
           -*)
               error "${red}${bold}unknown option: $1${reset}"
               ;;
           *)
               break
               ;;
       esac
   done
   ## If there are input files (for example) that follow the options, they
   ## will remain in the "$@" positional parameters.
   true "INFO $BASH_SOURCE $FUNCNAME: \$@: $@"
   build_args="$@"
   true "${cyan}${bold}$BASH_SOURCE $FUNCNAME${reset}: parsing command line arguments done."
}

build_main_build() {
   trap "build_main_error_handler" ERR
   true "INFO $BASH_SOURCE $FUNCNAME: build_args: $build_args"
   true "INFO $BASH_SOURCE $FUNCNAME: Build overview.
WHONIX_MAIN_SCRIPT_BUILD_GATEWAY: $WHONIX_MAIN_SCRIPT_BUILD_GATEWAY
WHONIX_MAIN_SCRIPT_BUILD_WORKSTATION: $WHONIX_MAIN_SCRIPT_BUILD_WORKSTATION
WHONIX_MAIN_SCRIPT_BUILD_CUSTOM_WORKSTATION: $WHONIX_MAIN_SCRIPT_BUILD_CUSTOM_WORKSTATION"
   if [ "$WHONIX_MAIN_SCRIPT_BUILD_GATEWAY" = "true" ]; then
      ./help-steps/whonix_build_one --tor-gateway $build_args
   fi
   if [ "$WHONIX_MAIN_SCRIPT_BUILD_WORKSTATION" = "true" ]; then
      ./help-steps/whonix_build_one --tor-workstation $build_args
   fi
   if [ "$WHONIX_MAIN_SCRIPT_BUILD_CUSTOM_WORKSTATION" = "true" ]; then
      ./help-steps/whonix_build_one --tor-custom-workstation $build_args
   fi
   true "INFO $BASH_SOURCE $FUNCNAME: Done."
}

build_main_defaults
build_main_parse_cmd ${1+"$@"}
build_main_build
