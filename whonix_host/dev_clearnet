# See the file COPYING for copying conditions.

exit 0

###########################
## debugging
###########################

#set -x

###########################
## error_handler
###########################

set -o pipefail

error_handler() {
   echo "##################################################"
   echo "dev_clearnet script failed!"
   echo "##################################################"
   exit 1
}

trap "error_handler" ERR INT TERM

###########################
## /usr/bin/dev_clearnet
###########################

echo "OK: dev_clearnet..."

###########################
## IPv4 DEFAULTS
###########################

iptables -P INPUT ACCEPT
iptables -P FORWARD ACCEPT
iptables -P OUTPUT ACCEPT

###########################
## IPv4
###########################

## Flush old rules.
iptables -F
iptables -X
iptables -t nat -F
iptables -t nat -X
iptables -t mangle -F
iptables -t mangle -X

###########################
## IPv6 DEFAULTS
###########################

## Policy DROP for all traffic as fallback.
ip6tables -P INPUT ACCEPT
ip6tables -P OUTPUT ACCEPT
ip6tables -P FORWARD ACCEPT

###########################
## IPv6
###########################

## Flush old rules.
ip6tables -F
ip6tables -X
ip6tables -t mangle -F
ip6tables -t mangle -X

###########################
## End
###########################

echo "OK: The firewall should not show any messages,"
echo "OK: besides output beginning with prefix OK:..."
echo "OK: dev_clearnet loaded."

exit 0
