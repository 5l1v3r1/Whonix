## Required for Tor restart and reload desktop icons.
user host=NOPASSWD: /usr/sbin/service tor restart
user host=NOPASSWD: /usr/sbin/service tor reload
user host=NOPASSWD: /usr/sbin/service tor status

## Required for whonixcheck running "tor --verify config".
user host=NOPASSWD: /usr/bin/tor *
