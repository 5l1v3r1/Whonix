set -x

error_handler() {
   echo "
###########################################################
## chroot script: ERROR detected. Please report this bug! #
###########################################################
"

   exit 1
}

trap "error_handler" ERR

own_filename="$(basename $0)"
case $WHONIX_BUILD_SKIP_SCRIPTS in
   *$own_filename*) true "INFO: Skipping $own_filename, because WHONIX_BUILD_SKIP_SCRIPTS includes it."
                    exit 0
                    ;;
esac

if [ "$whonix_build_on_operating_system" = "ubuntu" ]; then
   ## Workaround for Ubuntu / CI.
   true "INFO $0: Skipping, because whonix_build_on_operating_system is ubuntu."
else
   ## Just for convenience so the user will not be
   ## promoted "Please update-command-not-found.".
   update-command-not-found
fi
