#!/bin/bash

## This file is part of Whonix.
## Copyright (C) 2012 - 2014 Patrick Schleizer <adrelanos@riseup.net>
## See the file COPYING for copying conditions.

## Whonix /usr/lib/whonixcheck/apt-get-update-kill-helper

#set -x

if [ ! -f "/var/run/whonix/whonixcheck/whonixcheck_apt_get_pid" ]; then
   exit 0
fi

pid="$(cat "/var/run/whonix/whonixcheck/whonixcheck_apt_get_pid")"

if [ "$pid" = "" ]; then
   exit 0
fi

kill -sigterm "$pid"

## End of Whonix /usr/lib/whonixcheck/apt-get-update-kill-helper
