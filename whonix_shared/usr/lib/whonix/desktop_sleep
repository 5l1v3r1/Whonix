#set -x

whonixdesktop_wait_seconds="$1"

desktop_sigterm() {
   #echo "$scriptname INFO: SIGTERM revived!"
   exit 1
}

trap "desktop_sigterm" SIGTERM

sleep_return="0"
sleep "$whonixdesktop_wait_seconds" &
wait "$!" || { sleep_return="$?" ; true; };

exit 0
