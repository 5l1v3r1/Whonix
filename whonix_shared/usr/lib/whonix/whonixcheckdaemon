#set -x

#rm --force /home/user/whonixchecklog
#sudo -u user bash -x /usr/bin/whonixcheck --autostart >/home/user/whonixchecklog 2>/home/user/whonixchecklog || true
sudo -u user /usr/bin/whonixcheck --autostart >/dev/null 2>/dev/null || true
sleep 3600 &
wait "$!"

while true; do

   #sudo -u user bash -x /usr/bin/whonixcheck --autostart --daemon >/home/user/whonixchecklog 2>/home/user/whonixchecklog || true
   sudo -u user /usr/bin/whonixcheck --autostart --daemon >/dev/null 2>/dev/null || true
   sleep 3600 &
   wait "$!"

done
