#!/bin/bash

trap_sigterm() {
   echo "$SCRIPTNAME: SIGTERM received. Exiting."
   exit 0
}

trap "trap_sigterm" SIGTERM

cleanup() {
   trap "error_handler" ERR

   true "cleanup function..."

   if [ "$SHOW_CLI" = "1" ]; then
      true
   elif [ "$SHOW_X" = "1" ]; then
      true
   else
      progress_bar 100
   fi   
   
   sync
   
   if [ "$SHOW_CLI" = "1" ]; then
      true
   elif [ "$SHOW_X" = "1" ]; then
      true
   else  
      rm -f /var/run/whonix/whonixcheck/""$SCRIPTNAME"_running"
      rm -f /var/run/whonix/whonixcheck/""$SCRIPTNAME"_waiting"
      rm -f /var/run/whonix/whonixcheck/""$SCRIPTNAME"_progress"
      touch /var/run/whonix/whonixcheck/""$SCRIPTNAME"_done"
      rm -f /var/run/whonix/whonixcheck/""$SCRIPTNAME"_pid"
   fi
   
   sync
   
   ## Close pipe, which was opened for zenity.
   #exec 3>&- || true
  
   show_output
   
   cd ..
   #if [ -d "$VERIFY_TEMPDIR" ]; then
      #rm -r "$VERIFY_TEMPDIR"
   #fi   
   
   if [ "$SHOW_CLI" = "1" ]; then
      echo "End of "$SCRIPTNAME". Feel free to press <enter> to return back to your normal prompt."
   fi
   
   ## default exit code
   if [ "$EXIT_CODE" = "" ]; then
      EXIT_CODE="0"
   fi
   
   true "END"
   
   exit "$EXIT_CODE"
}


