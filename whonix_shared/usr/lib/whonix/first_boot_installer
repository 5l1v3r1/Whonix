## TODO: root_check

## regenerate /var/cache/fontconfig folder
dpkg-reconfigure fontconfig

## regenerate /var/cache/ldconfig/aux-cache file
/var/cache/ldconfig/aux-cache

## regenerate /var/cache/man folder
mandb --create

true "The \"update-xmlcatalog: cannot open catalog data\" error is expected."

## regenerate /var/lib/xml-core folder
dpkg -i /var/lib/whonix/initial-pkgs/xml-core/xml-core_*.deb

true "The \"update-xmlcatalog: cannot open catalog data\" error was expected."

