kill_old_instances() {
   trap "" ERR INT TERM
   
   local me="$$"
   local pids="`pgrep "$SCRIPTNAME"`"

   for pid in `echo $pids`; do
      if [ "$pid" -ne "$me" ]; then
         #echo "killing: $pid ... aux: `ps aux | grep $pid`"
         kill -9 $pid
      else
         true
         #echo "not killing me $pid .. aux: `ps au | grep pid`"
      fi
   done
}

