error_handler() {
   BUG="1"
   show_output
   
   ZENITY_MESSAGE=""
   
   local MSG="timesync script bug
Run: timesync -v
for verbose output. Clean the output and
please report this bug!
bash_commend: $BASH_COMMAND"
   echo "$MSG"
   output "--error" "ERROR" "$MSG"
   show_output
   
   exit 1
}

trap "error_handler" ERR INT TERM

