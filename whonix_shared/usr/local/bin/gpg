#!/bin/bash

port="9105"

if [ -f "/usr/share/whonix/whonix_workstation" ]; then
   ip="192.168.0.10"
elif [ -f "/usr/share/whonix/whonix_gateway" ]; then
   ip="127.0.0.1"
else
   error "/usr/local/bin/apt-get uwt wrapper could not determine if this is Whonix-Workstation or Whonix-Gateway."
   error "Please report this bug!"
fi

/usr/local/bin/uwt -t 5 -i "$ip" -p "$port" -c "/usr/bin/gpg $*"

# End of Whonix /usr/local/bin/gpg uwt wrapper.
