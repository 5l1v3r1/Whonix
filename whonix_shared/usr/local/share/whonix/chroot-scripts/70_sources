#!/bin/bash

set -x

error_handler() {
   echo "
###################################
## chroot script: ERROR detected. #
###################################
"

   exit 1
} 

trap "error_handler" ERR INT TERM

own_filename="$(basename $0)"
case $skip_scripts in
   *$own_filename*) true "INFO: Skipping $own_filename, because skip_scripts includes it."
                    exit 0
                    ;;
esac

## Create folder.
mkdir --parents /usr/local/share/whonix/gpl/

## Outputs format "package=1:1.0-1"
/usr/local/share/whonix/damngpl --source /var/lib/dpkg/status > /usr/local/share/whonix/gpl/damngpl_source

## Outputs format "package_1.0-1"
/usr/local/share/whonix/damngpl --dget /var/lib/dpkg/status > /usr/local/share/whonix/gpl/damngpl_dget

## Outputs snapshot.debian.net deb-src lines
/usr/local/share/whonix/damngpl --snapshot /var/lib/dpkg/status > /usr/local/share/whonix/gpl/damngpl_snapshot

