#!/bin/bash

set -x

error_handler() {
   echo "
###################################
## chroot script: ERROR detected. #
###################################
"

   exit 1
} 

trap "error_handler" ERR INT TERM

## /etc/dpkg/origins/default
## || true to support re-running the script
ln -s /etc/dpkg/origins/whonix /etc/dpkg/origins/default || true
 
