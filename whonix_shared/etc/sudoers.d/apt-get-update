## /usr/bin/whonixcheck depends on the following line for check_operating_system
## allows running apt-get update as user (non-root)
user host=NOPASSWD: /usr/lib/whonix/whonixcheck/apt-get-update
user host=NOPASSWD: /usr/lib/whonix/whonixcheck/apt-get-update-simulate
user host=NOPASSWD: /usr/lib/whonix/whonixcheck/apt-get-update-kill-helper
