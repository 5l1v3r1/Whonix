## Allow Network Time Synchronization without password.
## Required when manually starting timesync as user.
user host=NOPASSWD: /etc/init.d/sdwdate
user host=NOPASSWD: /usr/sbin/service sdwdate *
user host=NOPASSWD: /bin/date *
