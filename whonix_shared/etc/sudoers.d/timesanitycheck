## required for running timesync as user
user host=NOPASSWD: /usr/sbin/service timesanitycheck status
user host=NOPASSWD: /usr/sbin/service timesanitycheck start
user host=NOPASSWD: /usr/sbin/service timesanitycheck stop
user host=NOPASSWD: /usr/sbin/service timesanitycheck restart
