set -x

true "INFO: Currently running script: $BASH_SOURCE${1+"$@"}"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..
cd help-steps

source pre
source variables

export-libvirt-xml() {
   trap "error_handler_general" ERR INT TERM

   if [ ! "$whonix_build_script_create_qcow2" = "1" ]; then
      true "${green}INFO: Skipping $BASH_SOURCE, because whonix_build_script_create_qcow2 is not set to 1.${reset}"
      return 0
   fi

   #mkdir --parents "$WHONIX_BINARY/temp_libvirt"
   #chown "$user_name":"$user_name" "$WHONIX_BINARY/temp_libvirt"

   #local source_xml temp_xml temp new

   #if [ "$WHONIX_BUILD_GATEWAY" = "1" ]; then
      #source_xml="$WHONIX_SOURCE_FOLDER/libvirt/whonix_gateway.xml"
      #temp_xml="$WHONIX_BINARY/temp_libvirt/whonix_gateway.xml"
   #elif [ "$WHONIX_BUILD_WORKSTATION" = "1" ]; then
      #source_xml="$WHONIX_SOURCE_FOLDER/libvirt/whonix_workstation.xml"
      #temp_xml="$WHONIX_BINARY/temp_libvirt/whonix_workstation.xml"
   #else
      #bug "${red}${bold}ERROR: Neither WHONIX_BUILD_GATEWAY nor WHONIX_BUILD_WORKSTATION is set to 1. Please report this bug!${reset}"
   #fi

   #if [ ! "$whonix_build_script_no_validate_libvirt_xml" = "1" ]; then
      #if [ "$WHONIX_BUILD_GATEWAY" = "1" ]; then
         #sudo -u "$user_name" virt-xml-validate "$WHONIX_SOURCE_FOLDER/libvirt/whonix_network.xml"
      #fi
      #sudo -u "$user_name" virt-xml-validate "$source_xml"
   #fi

   #if [ "$WHONIX_BUILD_GATEWAY" = "1" ]; then
      #sudo -u "$user_name" cp "$WHONIX_SOURCE_FOLDER/libvirt/whonix_network.xml" "$WHONIX_BINARY/temp_libvirt/"
   #fi
   #sudo -u "$user_name" cp "$source_xml" "$temp_xml"

   ## Searching for:
   ## <source file='/var/lib/libvirt/images/Whonix-Gateway.qcow2'/>
   #[ -n "$vm_source_image" ] || vm_source_image="$(grep -oP "(?<=<source file=').*(?='/>)" "$source_xml")"
   ## Example vm_source_image:
   ## /var/lib/libvirt/images/Whonix-Gateway.qcow2

   #local temp new
   #temp="<source file='$vm_source_image'/>"
   #temp=$(echo "$temp" | sed 's_/_\\/_g')
   #new="<source file='$binary_image_qcow2'/>"
   #new=$(echo "$new" | sed 's_/_\\/_g')

   #sed -i "s/$temp/$new/g" "$temp_xml"

   sudo -u "$user_name" mkdir --parents "$WHONIX_BINARY"

   if [ "$WHONIX_BUILD_GATEWAY" = "1" ]; then
      sudo -u "$user_name" cp "$WHONIX_SOURCE_FOLDER/libvirt/Whonix-Gateway_kvm.xml" "$WHONIX_BINARY/Whonix-Gateway_kvm-$whonix_build_closest_git_tag.xml"
      sudo -u "$user_name" cp "$WHONIX_SOURCE_FOLDER/libvirt/Whonix-Gateway_qemu-x86-x64.xml" "$WHONIX_BINARY/Whonix-Gateway_qemu-x86-x64-$whonix_build_closest_git_tag.xml"
      sudo -u "$user_name" cp "$WHONIX_SOURCE_FOLDER/libvirt/Whonix_network.xml" "$WHONIX_BINARY/Whonix_network-$whonix_build_closest_git_tag.xml"
      sudo -u "$user_name" cp "$WHONIX_SOURCE_FOLDER/libvirt/README.txt" "$WHONIX_BINARY/README-$whonix_build_closest_git_tag.txt"
   elif [ "$WHONIX_BUILD_WORKSTATION" = "1" ]; then
      sudo -u "$user_name" cp "$WHONIX_SOURCE_FOLDER/libvirt/Whonix-Workstation_kvm.xml" "$WHONIX_BINARY/Whonix-Workstation_kvm-$whonix_build_closest_git_tag.xml"
      sudo -u "$user_name" cp "$WHONIX_SOURCE_FOLDER/libvirt/Whonix-Workstation_qemu-x86-x64.xml" "$WHONIX_BINARY/Whonix-Workstation_qemu-x86-x64-$whonix_build_closest_git_tag.xml"
      sudo -u "$user_name" cp "$WHONIX_SOURCE_FOLDER/libvirt/README.txt" "$WHONIX_BINARY/README-$whonix_build_closest_git_tag.txt"
   else
      bug "${red}${bold}ERROR: Neither WHONIX_BUILD_GATEWAY nor WHONIX_BUILD_WORKSTATION is set to 1. Please report this bug!${reset}"
   fi
}

if [ "$BARE_METAL" = "1" ]; then
   true "${green}INFO: Skipping $BASH_SOURCE, because BARE_METAL is set to 1.${reset}"
else
   true "${bold}${under}INFO: Currently running script: $BASH_SOURCE ${1+"$@"}${reset}"
   export-libvirt-xml
   benchmark_time_end ## sets benchmark_took_time (implemented in help-steps/pre)
   true "${bold}${under}INFO: End of: $BASH_SOURCE No error detected. (benchmark: $benchmark_took_time)${reset}"
fi
