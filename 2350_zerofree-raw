set -x
set -e

true "INFO: Currently running script: $BASH_SOURCE $@"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..
cd help-steps

source pre
source colors
source variables

zerofree_raw() {

    source  "$WHONIX_SOURCE_HELP_STEPS_FOLDER"/mount-raw-no-chroot

    zerofree -v "$dev_mapper_device"

   "$WHONIX_SOURCE_HELP_STEPS_FOLDER"/unmount-raw-no-chroot
}


main() {
   root_check
   zerofree_raw
}

main "$@"
